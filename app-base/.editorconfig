# http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*]
charset = utf-8

# Set default indent size and style
[*]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
